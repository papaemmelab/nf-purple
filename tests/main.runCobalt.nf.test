nextflow_process {

    name "Test Process runCobalt"
    script "main.nf"
    process "runCobalt"

    test("Should run Cobalt without failures") {

        when {
            process {
                """
                input[0] = Channel.fromPath(params.tumorBam)
                input[1] = Channel.fromPath(params.normalBam)
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
            assert process.trace.tasks().size() == 1
            
            // check expected files
            with(process.out) {
                assert cobalt_tumor_ratio_tsv.size() == 1
                assert cobalt_tumor_ratio_pcf.size() == 1
                assert cobalt_normal_ratio_pcf.size() == 1
            }
        }

    }

}
